{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <h1>Bienvenue {{ app.user.email }}</h1>
    {% for book in app.user.bookings %}
         <p>Reservation numéro: {{ book.id }}</p>
        <p>Nombres de personnes: {{ book.customers }}</p>
        <p>Nombres de nuit: {{ book.numberOfNights }}</p>
        <p>Prix par nuit: {{ book.dorm.pricePerNight }}€</p>
        <p>Numéro de chambre: {{ book.dorm.number }}</p>

    {% endfor %}
{% endblock %}
